<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="src.mpp2024.clientserverapp.OficiuController">

  <!-- Setăm layoutul general pentru a ocupa întreaga fereastră -->
  <AnchorPane layoutX="0" layoutY="0" prefWidth="300" prefHeight="100"> <!-- Dimensiuni mai mici pentru fereastră -->

    <!-- VBox pentru a organiza elementele centrându-le pe verticală și orizontală -->
    <VBox alignment="CENTER" spacing="10" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="100"> <!-- Ajustăm marginea pentru a nu umple întreaga fereastră -->

      <!-- Titlu -->
      <Label text="Login to Oficiu" style="-fx-font-size: 20px; -fx-font-weight: bold;" /> <!-- Font mai mic pentru a se potrivi într-un chenar mai mic -->

      <!-- Câmp pentru Username -->
      <Label text="Username:" />
      <TextField fx:id="usernameTextField" promptText="Enter username" prefWidth="250" /> <!-- Lățimea câmpului text mai mică -->

      <!-- Câmp pentru Password -->
      <Label text="Password:" />
      <PasswordField fx:id="passwordTextField" promptText="Enter password" prefWidth="250" /> <!-- Lățimea câmpului password mai mică -->

      <!-- Buton de Login -->
      <Button fx:id="loginButton" text="Login" onAction="#onLoginButtonClick" prefWidth="150" />
    </VBox>

  </AnchorPane>

</AnchorPane>
